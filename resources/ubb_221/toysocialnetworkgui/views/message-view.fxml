<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ubb_221.toysocialnetworkgui.controller.MessageController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <ListView fx:id="listView" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" prefHeight="250"/>

        <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <TextArea fx:id="textFieldMessage" prefHeight="100"/>
            <Button text="Send" onAction="#handleSend"/>
        </HBox>
    </children>
</AnchorPane>
